<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="se.cambio.hackme.domain.User" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Authority" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.User.authorities" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.PersistentToken" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="se.cambio.hackme.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Event" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Prize" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Team" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Rule" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Member" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Proposal" uses-template="simple"/>

    <cache alias="se.cambio.hackme.domain.Category" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
